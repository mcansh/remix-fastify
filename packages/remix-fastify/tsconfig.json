{
  "exclude": ["./dist", "./__tests__", "./node_modules"],
  "include": ["./src"],
  "compilerOptions": {
    "lib": ["ES2022", "DOM.Iterable"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "rootDir": ".",
    "noEmit": true,
    "resolveJsonModule": true
  }
}
