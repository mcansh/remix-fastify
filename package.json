{
  "private": true,
  "repository": "mcansh/remix-fastify",
  "license": "MIT",
  "workspaces": [
    "./packages/*",
    "./example"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:packages": "npm run dev --workspaces=packages",
    "dev:example": "npm run dev --workspace=remix-app-template",
    "build:packages": "npm run build --workspaces=packages",
    "build:example": "npm run build --workspace=remix-app-template",
    "test": "npm run test --workspaces",
    "publish": "./scripts/publish.mjs",
    "publint": "publint ./packages/**",
    "lint": "eslint --cache --ignore-path .gitignore --fix .",
    "format": "prettier --write --ignore-path .gitignore .",
    "validate": "run-p lint format publint",
    "changeset": "changeset",
    "changeset:version": "changeset version && node ./scripts/remove-prerelease-changelogs.mjs",
    "changeset:release": "npm run build && changeset publish"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.2",
    "@manypkg/get-packages": "^2.2.0",
    "@remix-run/eslint-config": "1.19.1",
    "@types/glob": "^8.1.0",
    "eslint": "^8.46.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "publint": "^0.2.0",
    "react": "^18.2.0",
    "semver": "^7.5.4",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  }
}
